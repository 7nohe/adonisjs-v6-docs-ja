<div class="table_container table_expanded">
  <table>
    <thead>
      <tr>
        <th style="width: 240px;">Package</th>
        <th>Change</th>
        <th style="width: 120px;">Released on</th>
      </tr>
    </thead>
    <tbody>
      @each(release in (await getReleases()).slice(0, 5))
        <tr>
          <th>
            <code>{{ release.package }}</code>
          </th>
          <td>
            {{{ release.description }}}.
            <a href="{{ release.release_notes_link }}" target="_blank">
              <strong>Read release notes</strong>
            </a>
          </td>
          <td>
            {{ dayjs(release.released_on).format('MMM D, YYYY') }}
          </td>
        </tr>
      @end
    </tbody>
  </table>
</div>
